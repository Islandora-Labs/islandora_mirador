  $render_array = array(
  '#type' => 'container',
  '#attributes' => array(
    'class' => array('my-class'),
  ),
  'iframe' => array(
    '#theme' => 'html_tag',
    '#tag' => 'iframe',
    '#value' => '',
    '#attributes' => array(
      'src' => array('http://discoverygarden-vagrant-i7latest.local/sites/all/modules/islandora_mirador/mirador/index.html'),
      'width' => '100%',
      'height' => '700px',
      'frameborder' => '0',
